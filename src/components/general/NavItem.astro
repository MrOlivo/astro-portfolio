---
import {INavItemProps} from "@types";

const {text, link} = Astro.props as INavItemProps;
---

<li>
  <a
    class="p-4 dark:text-light text-lg box-content hover:bg-slate-100 dark:hover:bg-slate-600 md:hover:bg-none md:hover:border-b-4 md:hover:border-blue md:focus:border-b-4 md:focus:border-blue outline-none transition-all ease-in-out duration-200"
    href={link}>{text}</a
  >
</li>
