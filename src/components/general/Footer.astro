---
import { information } from "@data";
import { bento, email, github } from "@assets";
import LinkItem from "./LinkItem.astro";
const { ...props } = Astro.props;
---

<footer
  class="container flex sm:flex-row flex-col justify-between items-center mb-8 sm:mb-4"
  {...props}
>
  <p class="dark:text-light text-right my-8">
    Improved by <strong>Edwin Olivo</strong>
  </p>
  <div class="grid grid-cols-3 gap-4">
    <LinkItem title="Bento" href={information.socialMedia.bento}>
      <Fragment set:html={bento} />
    </LinkItem>
    <LinkItem title="GitHub" href={information.socialMedia.github}>
      <Fragment set:html={github} />
    </LinkItem>
    <LinkItem title="Email" href={information.socialMedia.email}>
      <Fragment set:html={email} />
    </LinkItem>
  </div>
</footer>
