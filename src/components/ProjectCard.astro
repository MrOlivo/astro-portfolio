---
import { Project } from "@types";
import { github, link } from "@assets";
const { title, thumbnails, liveUrl, githubUrl } = Astro.props as Project;
---

<article class="w-full max-h-72 overflow-hidden relative group">
  <div class="flex items-center absolute right-4 top-4 z-10">
    {
      githubUrl && (
        <a
          href={githubUrl}
          class="text-white p-3 bg-black/50 rounded-full backdrop-blur-md"
          aria-label="Social Media"
          target="_blank"
        >
          <Fragment set:html={github} />
        </a>
      )
    }

    {
      liveUrl && (
        <a
          href={liveUrl}
          class="text-white p-3 bg-black/50 rounded-full backdrop-blur-md ml-1"
          aria-label="Social Media"
          target="_blank"
        >
          <Fragment set:html={link} />
        </a>
      )
    }
  </div>
  <a href={liveUrl ? liveUrl : githubUrl} target="_blank">
    <picture>
      {thumbnails.avif && <source srcset={thumbnails.avif} type="image/avif" />}
      {thumbnails.webp && <source srcset={thumbnails.webp} type="image/webp" />}
      <img
        src={thumbnails.jpg || thumbnails.png}
        class="w-full h-auto scale-100 hover:scale-110 transition duration-[1.5s]"
        loading="lazy"
        width="100%"
        height="100%"
        alt="featureImage"
      />
    </picture>
  </a>
  <div
    class="absolute w-full bottom-0 left-0 backdrop-blur-md dark:text-white text-white bg-black/50 p-4 translate-y-[100%] group-hover:translate-y-0 transition duration-700"
  >
    <h3 class="mr-2 text-xl capitalize">{title}</h3>
  </div>
</article>
