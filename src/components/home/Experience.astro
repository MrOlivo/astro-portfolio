---
import { IExperiences } from "@types";

const { title, details, ...props } = Astro.props as IExperiences;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-light"
  {...props}
>
  <h2 class="w-[15rem] mt-16 uppercase">{title}</h2>
  <div class="w-full">
    {
      details.map((item) => (
        <div class="my-8 pt-8">
          <div class="flex justify-between items-center flex-wrap">
            <h3 class="text-xl font-semibold">{item.name}</h3>
            <p class="text-sm dark:text-gray">
              {item.startDate} - {item.endDate}
            </p>
          </div>
          <p class="text-sm mt-3 text-cyan-900 dark:text-blue">
            {item.location}
          </p>
          <ul class="mt-3">
            {item.description.map((item) => (
              <li class="dark:text-gray list-disc marker:text-blue">{item}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
