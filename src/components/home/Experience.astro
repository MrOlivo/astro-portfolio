---
import Section from "@components/Section.astro";
import { Experiences } from "@types";

const { title, details, ...props } = Astro.props as Experiences;
---

<Section title={title} {...props}>
    {
      details.map((item) => (
        <article class="my-8 first:mt-8 md:first:mt-16">
          <div class="flex justify-between items-center flex-wrap">
            <h3 class="text-xl font-semibold">
              {item.position} -{" "}
              <span class="text-cyan-900 dark:text-blue">{item.name}</span>
            </h3>
            <p class="text-sm dark:text-gray">
              {item.startDate} - {item.endDate}
            </p>
          </div>
          <ul class="mt-3">
            {item.description.map((item) => (
              <li class="dark:text-gray list-disc marker:text-blue">{item}</li>
            ))}
          </ul>
        </article>
      ))
    }
</Section>
